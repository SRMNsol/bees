# app
debug: <%= @app[:debug] %>

# dbal
db.options:
  driver:   pdo_mysql
  dbname:   <%= @database[:database] %>
  host:     <%= @database[:host] %>
  user:     <%= @database[:username] %>
  password: <%= @database[:password] %>
  charset:  utf8

# orm
orm.em.options:
  result_cache:
    driver: memcache
    host: <%= @memcached[:host] %>
    port: <%= @memcached[:port] %>

# swiftmailer
swiftmailer.options:
  password: <%= @app[:smtp][:password] %>

# storage
bucket_dir: <%= @app[:s3][:bucket] %>
bucket_url: <%= @app[:s3][:url] %>
