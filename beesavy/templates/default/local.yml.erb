# app
debug: <%= @app[:debug] %>

# dbal
db.options:
  driver:   pdo_mysql
  dbname:   <%= @database[:database] %>
  host:     <%= @database[:host] %>
  user:     <%= @database[:username] %>
  password: <%= @database[:password] %>
  charset:  utf8

# orm
orm.em.options:
  cache_namespace: <%= @app[:cache_namespace] %>
  result_cache:
    driver: memcache
    host: <%= @memcached[:host] %>
    port: <%= @memcached[:port] %>

# swiftmailer
swiftmailer.options:
  password: <%= @app[:smtp][:password] %>

# storage
bucket_dir: <%= @app[:storage][:bucket] %>
bucket_url: <%= @app[:storage][:url] %>

# rakuten oauth2
rakuten_oauth2_config:
  username: <%= @app[:rakuten_oauth2][:username] %>
  password: <%= @app[:rakuten_oauth2][:password] %>
  client_id: <%= @app[:rakuten_oauth2][:client_id] %>
  client_secret: <%= @app[:rakuten_oauth2][:client_secret] %>
  scope: <%= @app[:rakuten_oauth2][:scope] %>
